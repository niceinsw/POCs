@{
    ViewBag.Title = "About";
}

<style>
    .item-wrapper {
        height: 100px;
        border: 1px solid green;
        position: relative;
    }

    .link-div {
        border: 1px solid red;
        height: 100%;
    }

    .internal-link {
        /*border: 2px solid yellow;
        background: #eee;*/
        position: absolute;
        right: 10px;
        bottom: 10px;
    }
    .tick-two {
        margin-left: -7px;
    }

    .tick-sent {
        color: grey;
    }
    .tick-received {
        color: grey;
    }
    .tick-read {
        color: #34b7f1;
    }
</style>

<br /><br />
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>Use this area to provide additional information.</p>
<div class="row">
    <div class="col-md-12">
        <p>Icons: <i class='fas fa-check-double' style='font-size:1em'></i></p>
        <p>Unicode: <span>&#10003;</span></p>
        <p>Sent: <span class="tick-sent tick-one">&#10003;</span></p>
        <p>Received: <span class="tick-received tick-one">&#10003;</span><span class="tick-received tick-two">&#10003;</span></p>
        <p>Read: <span class="tick-read tick-one">&#10003;</span><span class="tick-read tick-two">&#10003;</span></p>

    </div>
</div>
<br />
<div class="row">
    <div class="col-md-6">
        <div class="item-wrapper">
            <a href="https://www.google.com">
                <div class="link-div">
                    <p>Google</p>
                </div>
            </a>
            <a href="https://www.yahoo.com" class="btn btn-info internal-link">
                Yahoo
            </a>
        </div>
        <br />
        <div class="item-wrapper">
            <a href="https://www.google.com">
                <div class="link-div">
                    <p>Google</p>
                </div>
            </a>
            <a href="https://www.yahoo.com" class="btn btn-info internal-link">
                Yahoo
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label for="comment">Input:</label>
            <textarea class="form-control commentArea" rows="5" id="commentArea"></textarea>
        </div>
    </div>
    <div class="col-md-12">
        <button class="btn btn-info" id="btnCheck">Check</button>
    </div>
    <div class="col-md-12">
        <p id="result">Result</p>
    </div>
</div>
